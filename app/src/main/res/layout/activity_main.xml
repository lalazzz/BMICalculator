<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/scalebg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to BMI Calculator"
        android:id="@+id/welcomeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Your Height (cm)"
        android:id="@+id/heightText"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:textColor="#ff191a"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/height"
        android:layout_below="@+id/heightText"
        android:layout_centerHorizontal="true"
        android:textColor="#ff7f24"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Your Weight (kg)"
        android:id="@+id/weightText"
        android:layout_below="@+id/height"
        android:layout_centerHorizontal="true"
        android:textColor="#c215ff"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/weight"
        android:layout_below="@+id/weightText"
        android:layout_centerHorizontal="true"
        android:textColor="#088cff"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BMI Result"
        android:id="@+id/bmiResult"
        android:layout_below="@+id/weight"
        android:layout_centerHorizontal="true"
        android:textColor="#00b7a8"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="  Calculate My BMI  "
        android:background="#fffaf1"
        android:id="@+id/compute_button"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/bmiResult"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="#ff4a8f"/>

</RelativeLayout>
